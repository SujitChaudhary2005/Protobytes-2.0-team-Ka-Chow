# ============================================
# UPA-NP — Environment Variables
# Copy to .env.local and fill in your values
# ============================================

# Supabase — Required for production/demo mode
# Get these from: https://app.supabase.com → Project Settings → API
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Demo Mode — Controls RLS behavior
# true  = RLS wide-open, no auth required (hackathon demo)
# false = Require proper auth (production)
NEXT_PUBLIC_DEMO_MODE=true

# ============================================
# Demo Accounts (Hackathon Only)
# ============================================
NEXT_PUBLIC_DEMO_PASSWORD_CITIZEN=citizen123
NEXT_PUBLIC_DEMO_PASSWORD_OFFICER=officer123
NEXT_PUBLIC_DEMO_PASSWORD_MERCHANT=merchant123
NEXT_PUBLIC_DEMO_PASSWORD_ADMIN=admin123